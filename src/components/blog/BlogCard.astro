---
import type { CollectionEntry } from 'astro:content';
import { formatDate, getReadingTime } from '@/lib/blogUtils';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, tags, heroImage } = post.data;
const readingTime = getReadingTime(post.body);
---

<article class="group bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-xl transition-shadow duration-300">
  {heroImage && (
    <div class="aspect-video overflow-hidden bg-gray-100">
      <img
        src={heroImage}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
    </div>
  )}

  <div class="p-6">
    <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
      <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
      <span>â€¢</span>
      <span>{readingTime} min czytania</span>
    </div>

    <h2 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
      <a href={`/blog/${post.slug}`}>
        {title}
      </a>
    </h2>

    <p class="text-gray-600 mb-4 line-clamp-2">
      {description}
    </p>

    <div class="flex flex-wrap gap-2">
      {tags.map(tag => (
        <span class="inline-block px-3 py-1 text-sm font-medium bg-primary-50 text-primary-700 rounded-full">
          {tag}
        </span>
      ))}
    </div>
  </div>
</article>
