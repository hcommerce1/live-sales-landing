---
import type { CollectionEntry } from 'astro:content';
import { formatDate } from '@/lib/blogUtils';
import AudioPlayer from '@/components/blog/AudioPlayer';

interface Props {
  post: CollectionEntry<'blog'>;
  readingTime: number;
}

const { post, readingTime } = Astro.props;
const { title, description, pubDate, author, tags, heroImage } = post.data;
---

<header class="mb-12">
  {heroImage && (
    <div class="w-full h-96 mb-8 rounded-2xl overflow-hidden">
      <img
        src={heroImage}
        alt={title}
        class="w-full h-full object-cover"
      />
    </div>
  )}

  <div class="max-w-3xl mx-auto px-4">
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map(tag => (
        <span class="inline-block px-3 py-1 text-sm font-medium bg-primary-50 text-primary-700 rounded-full">
          {tag}
        </span>
      ))}
    </div>

    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
      {title}
    </h1>

    <p class="text-xl text-gray-600 mb-6">
      {description}
    </p>

    <div class="flex items-center gap-6 text-gray-600 border-t border-b border-gray-200 py-4">
      <div class="flex items-center gap-2">
        <div class="w-10 h-10 bg-gradient-brand rounded-full flex items-center justify-center">
          <span class="text-white font-semibold text-sm">{author.name.charAt(0)}</span>
        </div>
        <div>
          <p class="font-medium text-gray-900">{author.name}</p>
          {author.role && <p class="text-sm text-gray-500">{author.role}</p>}
        </div>
      </div>

      <div class="text-sm">
        <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
        <span class="mx-2">â€¢</span>
        <span>{readingTime} min czytania</span>
      </div>

      <div class="ml-auto">
        <AudioPlayer client:idle slug={post.slug} lang={post.data.lang} />
      </div>
    </div>
  </div>
</header>
