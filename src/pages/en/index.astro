---
import Layout from '@layouts/Layout.astro';
import Navbar from '@components/Navbar';
import Hero from '@components/Hero';
import Features from '@components/Features';
import TrustedBy from '@components/TrustedBy';
import ForWhom from '@components/ForWhom';
import HowItWorks from '@components/HowItWorks';
import DashboardPreview from '@components/DashboardPreview';
import Integrations from '@components/Integrations';
import Security from '@components/Security';
import Pricing from '@components/Pricing';
import Contact from '@components/Contact';
import Footer from '@components/Footer';

const title = 'LiveSales - Dashboards and Exports for E-commerce';
const description = 'Build dashboards and automatic exports. Connect data from Baselinker, Allegro, dropshipping wholesalers.';
---

<Layout title={title} description={description} lang="en">
  <Navbar client:load />
  <main>
    <Hero client:load />
    <Features client:visible />
    <TrustedBy client:visible />
    <ForWhom client:visible />
    <HowItWorks client:visible />
    <DashboardPreview client:visible />
    <Integrations client:visible />
    <Security client:visible />
    <Pricing client:visible />
    <Contact client:load />
  </main>
  <Footer />
</Layout>
