---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import Navbar from '@components/Navbar';
import Footer from '@components/Footer';
import AISearch from '@components/blog/AISearch';

const posts = await getCollection('blog', ({ data }) =>
  data.lang === 'pl' && !data.draft
);

// Sort by date (newest first)
posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const featuredPosts = posts.filter(p => p.data.featured);
const regularPosts = posts.filter(p => !p.data.featured);

const title = 'Blog - LiveSales';
const description = 'Przewodniki, case studies i najlepsze praktyki automatyzacji danych dla e-commerce. Dowiedz się jak oszczędzić czas i podejmować lepsze decyzje biznesowe.';
---

<Layout title={title} description={description} lang="pl">
  <Navbar client:load />

  <main>
    <!-- Hero section -->
    <section class="pt-32 pb-16 bg-gradient-to-br from-blue-50 via-white to-sky-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900">
            Blog LiveSales
          </h1>
          <p class="mt-6 text-xl text-gray-600">
            Przewodniki, case studies i najlepsze praktyki automatyzacji danych dla e-commerce
          </p>

          <!-- AI-Powered Search -->
          <div class="mt-10 flex justify-center">
            <AISearch
              client:load
              language="pl"
              placeholder="Szukaj artykułów... (np. 'jak zaoszczędzić czas')"
              limit={5}
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Featured posts -->
    {featuredPosts.length > 0 && (
      <section class="py-16 bg-white">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-8">
            Wyróżnione
          </h2>

          <div class="grid md:grid-cols-2 gap-8">
            {featuredPosts.map((post) => (
              <a
                href={`/pl/blog/${post.slug}`}
                class="group block bg-gray-50 rounded-2xl overflow-hidden hover:shadow-xl transition-all border border-gray-100"
              >
                <div class="p-8">
                  <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {post.data.pubDate.toLocaleDateString('pl-PL', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    <span>•</span>
                    <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium capitalize">
                      {post.data.category}
                    </span>
                  </div>
                  <h3 class="text-2xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="mt-3 text-gray-600 line-clamp-2">
                    {post.data.description}
                  </p>

                  {post.data.tags.length > 0 && (
                    <div class="mt-4 flex flex-wrap gap-2">
                      {post.data.tags.slice(0, 3).map(tag => (
                        <span class="px-2 py-1 bg-gray-200 text-gray-700 rounded-full text-xs">
                          #{tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- All posts -->
    <section class="py-16 bg-gray-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">
          {featuredPosts.length > 0 ? 'Wszystkie artykuły' : 'Najnowsze artykuły'}
        </h2>

        {regularPosts.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {regularPosts.map((post) => (
              <a
                href={`/pl/blog/${post.slug}`}
                class="group block bg-white rounded-xl p-6 hover:shadow-lg transition-all border border-gray-100"
              >
                <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('pl-PL', {
                      month: 'short',
                      day: 'numeric',
                      year: 'numeric'
                    })}
                  </time>
                  <span>•</span>
                  <span class="text-xs font-medium text-blue-600 capitalize">
                    {post.data.category}
                  </span>
                </div>
                <h3 class="text-lg font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
                  {post.data.title}
                </h3>
                <p class="mt-2 text-sm text-gray-600 line-clamp-3">
                  {post.data.description}
                </p>

                {post.data.tags.length > 0 && (
                  <div class="mt-4 flex flex-wrap gap-1">
                    {post.data.tags.slice(0, 2).map(tag => (
                      <span class="px-2 py-0.5 bg-gray-100 text-gray-600 rounded-full text-xs">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}
              </a>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-gray-500">Brak artykułów do wyświetlenia.</p>
          </div>
        )}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-white">
      <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900">
          Gotowy na automatyzację?
        </h2>
        <p class="mt-4 text-lg text-gray-600">
          Odkryj jak LiveSales może zaoszczędzić Twój czas i poprawić decyzje biznesowe
        </p>
        <div class="mt-8">
          <a
            href="/#kontakt"
            class="inline-block bg-gradient-to-r from-blue-700 to-blue-500 text-white px-8 py-4 rounded-xl font-semibold hover:opacity-90 transition-opacity"
          >
            Skontaktuj się z nami
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
