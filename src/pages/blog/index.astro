---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/Navbar';
import Footer from '@/components/Footer';
import BlogCard from '@/components/blog/BlogCard.astro';
import { getCollection } from 'astro:content';
import { sortByDate, filterPublished } from '@/lib/blogUtils';

const allPosts = await getCollection('blog');
const publishedPosts = sortByDate(filterPublished(allPosts));
---

<Layout
  title="Blog - LiveSales | Praktyczne porady z e-commerce"
  description="Analizy, case studies i porady dotyczące automatyzacji sprzedaży, marketplace i optymalizacji procesów e-commerce."
  lang="pl"
>
  <Navbar client:load />

  <main class="pt-24 pb-16 min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-brand py-16 mb-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Blog LiveSales
        </h1>
        <p class="text-xl text-white/90 max-w-2xl mx-auto">
          Praktyczne porady i analizy z e-commerce
        </p>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {publishedPosts.length === 0 ? (
        <p class="text-center text-gray-500 py-12">Nie znaleziono artykułów</p>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {publishedPosts.map(post => (
            <BlogCard post={post} />
          ))}
        </div>
      )}
    </section>
  </main>

  <Footer />
</Layout>
