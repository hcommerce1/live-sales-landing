---
import '@/styles/global.css';
import AnalyticsTracker from '@/components/analytics/AnalyticsTracker.astro';
import SearchOverlay from '@/components/blog/SearchOverlay';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
  slug?: string;
}

const {
  title = 'LiveSales - Analiza i automatyzacja danych',
  description = 'Jedno miejsce do analizy, porównywania i automatyzacji danych z różnych źródeł — z gotowymi dashboardami, eksportami i alertami.',
  lang = 'pl',
  slug,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="alternate" type="application/rss+xml" title="LiveSales Blog" href="/rss.xml" />
    <meta name="generator" content={Astro.generator} />

    <slot name="head" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="LiveSales" />
    <meta property="og:locale" content={lang === 'en' ? 'en_US' : 'pl_PL'} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Fonts - Outfit for logo/headings, Inter for body -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@600;700;900&family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

    <!-- KaTeX CSS for math formulas in blog posts -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous" />

    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white font-sans">
    <slot />
    <SearchOverlay client:idle language={lang === 'en' ? 'en' : 'pl'} />
    <AnalyticsTracker slug={slug} lang={lang} />
  </body>
</html>

<style is:global>
  body {
    font-family: 'Inter', system-ui, sans-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Outfit', 'Inter', system-ui, sans-serif;
  }
</style>
